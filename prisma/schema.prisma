generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id String @id @default(uuid())
  
  title String 
  description String?

  status TaskStatus @default(TODO)

  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tasks")
}

enum TaskStatus {
  TODO
  DONE
  IN_PROGRESS
  CANCELLED
  @@map("enum_task_status")
}